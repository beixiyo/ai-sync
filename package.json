{
  "name": "@jl-org/ai-sync",
  "version": "1.0.0",
  "description": "IDE Rules 迁移脚本",
  "ai-sync": {
    "configDir": "C:\\Code\\ai-sync\\test-data"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-sync": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix --quiet",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/lib/integration.test.ts"
  },
  "keywords": [],
